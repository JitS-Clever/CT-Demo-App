<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white">

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="8dp"
            android:src="@drawable/ic_profile" />

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="8dp"
            android:src="@drawable/ic_search" />

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="8dp"
            android:src="@drawable/ic_notification" />

        <!-- Logout Icon -->
        <ImageView
            android:id="@+id/logout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="8dp"
            android:src="@drawable/ic_logout" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30px"
        ></LinearLayout>

    <LinearLayout
        android:id="@+id/image_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First row of images with titles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Image 1 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"     >

                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/fd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FD/RD"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 2 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/investment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Investment"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 3 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/creditcard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 4 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/loans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loans"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Second row of images with titles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Image 5 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sendmoney" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Money"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 6 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/services" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 7 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/guaranteedreturns" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guaranteed Returns"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 8 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/billpay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay Bills"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <!-- Other UI elements go here -->

</LinearLayout>
