                    android:id="@+id/logo2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/investment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Investment"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 3 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/creditcard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 4 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/loans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loans"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Second row of images with titles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Image 5 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sendmoney" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Money"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 6 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/services" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 7 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/guaranteedreturns" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guaranteed Returns"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Image 8 with title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/billpay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay Bills"
                    android:maxWidth="50dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pay Bills"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="start"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View All"
                android:gravity="end"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/fastaglogo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/fastag"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="FASTag"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/fastagnext"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/next"
                android:layout_weight="0"
                android:layout_gravity="end|center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/rechargelogo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/recharge"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Recharge"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/rechargenext"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/next"
                android:layout_weight="0"
                android:layout_gravity="end|center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/electricitylogo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/electricity"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Electricity"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/electricitynext"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/next"
                android:layout_weight="0"
                android:layout_gravity="end|center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/pipedgaslogo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/pipeline"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Piped Gas"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/pipedgasnext"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/next"
                android:layout_weight="0"
                android:layout_gravity="end|center_vertical" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/dthlogo"
                android:layout_width="35dp"
