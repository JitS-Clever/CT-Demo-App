<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3b3b3"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_profile"
                />

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_search"
                />

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_notification"
                />

            <!-- Logout Icon -->
            <ImageView
                android:id="@+id/logout_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_logout"
                />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_1_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Image -->
                <ImageView
                    android:id="@+id/card_1_img"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/insurance"
                    android:scaleType="centerCrop"/>

                <!-- Text and Button Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <!-- Text -->
                    <TextView
                        android:id="@+id/card_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dropping some random text"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="6dp"/>

                    <!-- Button -->
                    <Button
                        android:id="@+id/card_1_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy Now"
                        android:gravity="end"
                        android:padding="6dp"
                        android:textColor="#1D72EF"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_2_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Image -->
                <ImageView
                    android:id="@+id/card_2_img"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/insurance"
                    android:scaleType="centerCrop"/>

                <!-- Text and Button Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <!-- Text -->
                    <TextView
                        android:id="@+id/card_2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dropping some random text"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="6dp"/>

                    <!-- Button -->
                    <Button
                        android:id="@+id/card_2_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy Now"
                        android:gravity="end"
                        android:padding="6dp"
                        android:textColor="#1D72EF"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Image -->
                <ImageView
                    android:id="@+id/card_3_img"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/insurance"
                    android:scaleType="centerCrop"/>

                <!-- Text and Button Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <!-- Text -->
                    <TextView
                        android:id="@+id/card_3_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dropping some random text"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="6dp"/>

                    <!-- Button -->
                    <Button
                        android:id="@+id/card_3_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy Now"
                        android:gravity="end"
                        android:padding="6dp"
                        android:textColor="#1D72EF"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
